---
// Layout.astro
import "../styles/global.css";
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-marca-personal.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>404 | Juan Betancur</title>
	</head>


<main class="grid min-h-full place-items-center bg-red-500 px-6 py-24 sm:py-32 lg:px-8">
  <div class="text-center">
    <p class="text-base font-semibold text-[#321819]">404</p>
    <h1 class="mt-4 text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl">Page not found</h1>
    <p class="mt-6 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8">Sorry, we couldn't find the page you're looking for.</p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <a href="/" class="rounded-md bg-yellow-300 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-[#202442] focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#181b32]">Go back home</a>
    </div>
  </div>
</main>
</html>